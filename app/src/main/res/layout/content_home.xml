<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context="com.example.sbastien.thieftracker.HomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Unplugging alarm"
                android:textOff="Unplugging alarm"
                android:textOn="Unplugging alarm"
                android:id="@+id/buttonUnplugged"
                android:drawableTop="@drawable/ic_unplugged"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Movement alarm"
                android:textOff="Movement alarm"
                android:textOn="Movement alarm"
                android:id="@+id/buttonMoving"
                android:drawableTop="@drawable/ic_movement"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Manage friends"
            android:id="@+id/buttonFriends"
            android:drawableTop="@drawable/ic_friends"
            android:layout_weight="2" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

    </LinearLayout>
</RelativeLayout>
